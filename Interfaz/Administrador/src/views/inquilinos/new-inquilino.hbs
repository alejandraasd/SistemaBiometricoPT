<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">Nuevo inquilino</h3>
    </div>
    <div class="card-body text-right">
      <form action="/inquilinos/new-inquilino" method="POST">
        <div class="mb-3">
          <label for="nombre">Nombre:</label>
          <input
            type="text"
            name="nombre"
            class="form-control"
            placeholder="Nombre Completo"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="curp">Curp:</label>
          <input
            type="text"
            name="curp"
            class="form-control"
            placeholder="Curp"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="piso">No. Piso:</label>
          <input
            type="text"
            name="piso"
            class="form-control"
            placeholder="No. Piso"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="departamento">No. Departamento:</label>
          <input
            type="text"
            name="departamento"
            class="form-control"
            placeholder="No. Departamento"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="telefono">No. Teléfono:</label>
          <input
            type="text"
            name="telefono"
            class="form-control"
            placeholder="No. Teléfono"
          autofocus
          />
        </div>
        <div class="mb-3">
          <label for="correo">Correo:</label>
          <textarea
            name="correo"
            class="form-control"
            placeholder="Correo"
          ></textarea>
        </div>
        <button class="btn btn-primary w-100" type="submit">
          Guardar
        </button>
      </form>
    </div>
  </div>
</div>