<div class="row">
  {{#each trabajadores}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
         <h3 class="d-flex flex-row-reverse">
          <a href="/trabajadores/edit/{{_id}}"><i class="fas fa-edit"></i></a> 
         </h3>
         Trabajador:
        <h4 class="card-title d-flex justify-content-between align-items-center">
          
         {{ nombre }}
        </h4>
        <p>Curp: {{ curp }} </p>
        <p>No. Tel√©fono: {{ telefono }} </p>
        <p>Correo: {{ correo }} </p>
        <p>Cargo: {{ cargo }} </p>
        <p>Domicilio: {{ domicilio }} </p>
        
        
        <!-- DELETE REQUEST -->
        <form action="/trabajadores/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola {{user.name}}</h1>
      <p clsss="lead">No hay trabajadores.</p>
      <a href="/trabajadores/add" class="btn btn-success btn-block">Crea un Trabajador!</a>
    </div>
  </div>
  {{/each}}
</div>